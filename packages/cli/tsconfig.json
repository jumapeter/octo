{
  "compilerOptions": {
    "declaration": true,
    "inlineSources": false,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
